{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["dom", "ESNext"],
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "verbatimModuleSyntax": false,
    "typeRoots": ["./node_modules/@types"],
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*"]
}
